<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorPickerView">

        <!-- palette -->
        <attr name="paletteRadius" format="dimension" />
        <attr name="paletteGravity" format="flags">
            <flag name="left" value="1" />
            <flag name="top" value="2" />
            <flag name="right" value="4" />
            <flag name="bottom" value="8" />
            <flag name="center_horizontal" value="16" />
            <flag name="center_vertical" value="32" />
            <flag name="center" value="48" />
        </attr>
        <attr name="paletteOffsetX" format="dimension" />
        <attr name="paletteOffsetY" format="dimension" />

        <attr name="initialColor" format="color" />
        <attr name="disallowInterceptTouchEvent" format="boolean" />

    </declare-styleable>

</resources>